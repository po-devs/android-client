<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:drawable="@drawable/battle_border_pressed"
    android:state_pressed="true" />
    <item android:state_enabled="true">
    <shape
	xmlns:android="http://schemas.android.com/apk/res/android">
	<gradient
		android:startColor="#4D6BB3"
        android:endColor="#6890f0"
        android:angle="90" />
	
	<stroke
		android:width="1dp"
		android:color="#000000"
	/>
	<padding
		android:left="4dp"
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
	/>
	<corners
		android:radius="8dp"
	/>
</shape>
</item>
    <item android:state_enabled="false">
    <shape
	xmlns:android="http://schemas.android.com/apk/res/android">
	<gradient
		android:startColor="#7D8DB3"
        android:endColor="#A8BDF0"
        android:angle="90" />
	
	<stroke
		android:width="1dp"
		android:color="#000000"
	/>
	<padding
		android:left="4dp"
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
	/>
	<corners
		android:radius="8dp"
	/>
</shape>
</item>
</selector>
