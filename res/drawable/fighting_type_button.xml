<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:drawable="@drawable/battle_border_pressed"
    android:state_pressed="true" />
    <item android:state_enabled="true">
    <shape
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<gradient
		android:endColor="#c03028"
		android:startColor="#80201B"
		android:angle="90"/>
	<stroke
		android:width="1dp"
		android:color="#000000"
	/>
	<padding
		android:left="4dp"
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
	/>
	<corners
		android:radius="8dp"
	/>
</shape>
</item>
    <item android:state_enabled="false">
    <shape
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<gradient
		android:endColor="#C07773"
		android:startColor="#995F5C"
		android:angle="90"/>
	<stroke
		android:width="1dp"
		android:color="#000000"
	/>
	<padding
		android:left="4dp"
		android:top="4dp"
		android:right="4dp"
		android:bottom="4dp"
	/>
	<corners
		android:radius="8dp"
	/>
</shape>
</item>
</selector>
