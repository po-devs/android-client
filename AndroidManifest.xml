<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pokebros.android.pokemononline"
    android:versionCode="20"
    android:versionName="0.9.0"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.pokebros.android.pokemononline.ReportingApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:theme="@style/AppTheme" 
        android:allowBackup="true">
        <activity
            android:name=".RegistryActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BattleActivity"
            android:theme="@style/FullscreenTheme" 
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.pokebros.android.pokemononline.ChatActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>

        <service android:name=".NetworkService">
        </service>
        <service android:name="com.pokebros.android.pokemononline.RegistryConnectionService"  >
        </service>
    </application>

</manifest>